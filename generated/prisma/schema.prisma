generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id             String   @id @default(uuid())
  titulo         String
  autor          String
  codigoLibro    String
  estado         String
  propietario    Int //Id del propietario
  disponibilidad String   @default("available")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt()
}

model User {
  id           String   @id @default(uuid())
  nombre       String
  biografia    String?
  correo       String   @unique
  contrase√±a  String
  ciudad       String
  registradoEn DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Listing {
  id            String   @id @default(uuid())
  bookId        String
  precio        Float?
  esIntercambio Boolean
  ubicacion     String
  createdAt     DateTime @default(now())
}

model Exchange {
  id            String   @id @default(uuid())
  libroOfrecido String
  libroDeseado  String
  estado        String
  createdAt     DateTime @default(now())
}

model Message {
  id          String   @id @default(uuid())
  deUsuario   String
  paraUsuario String
  contenido   String
  enviadoEn   String
  sentAt      DateTime @default(now())
}
